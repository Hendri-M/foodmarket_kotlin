<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/fragmentSignIn"
    android:id="@+id/nav_auth">

    <fragment android:id="@+id/fragmentSignIn"
        android:name="com.tutor.foodmarketkotlin.ui.auth.signin.SigninFragment"
        tools:layout="@layout/fragment_signin">

        <action
            android:id="@+id/action_signUp"
            app:destination="@id/fragmentSignUp" />
    </fragment>

    <fragment android:id="@+id/fragmentSignUp"
        android:name="com.tutor.foodmarketkotlin.ui.auth.signup.SignUpFragment"
        tools:layout="@layout/fragment_sign_up">

        <action
            android:id="@+id/action_signUpAddress"
            app:destination="@id/fragmentSignUpAddress"/>
    </fragment>

    <fragment android:id="@+id/fragmentSignUpAddress"
        android:name="com.tutor.foodmarketkotlin.ui.auth.signup.SignUpAddressFragment"
        tools:layout="@layout/fragment_sign_up_address">

    </fragment>
</navigation>